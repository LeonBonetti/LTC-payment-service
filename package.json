{
  "name": "ltc-payment-service",
  "version": "1.0.0",
  "description": "Simple litecoin payment service to code makers",
  "main": "./lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:commonjs": "rimraf lib && tsc --target es5 --outDir lib --module commonjs --declaration",
    "build:es": "rimraf es && tsc --target es6 --outDir es --module es6",
    "build": "npm run build:commonjs && npm run build:es",
    "ts": "ts-node src/",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonBonetti/LTC-payment-service.git"
  },
  "keywords": [
    "Litecoin",
    "Bitcoin",
    "TypeScript",
    "NodeJs"
  ],
  "author": "Leonardo Bonetti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LeonBonetti/LTC-payment-service/issues"
  },
  "homepage": "https://github.com/LeonBonetti/LTC-payment-service#readme",
  "devDependencies": {
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.1"
  },
  "files": [
    "es",
    "lib"
  ],
  "types": "./lib/index.d.ts",
  "jsnext:main": "./es/index.js",
  "module": "./es/index.js",
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/morgan": "^1.7.35",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1"
  }
}
